<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

    <body>

        <%- include('./partials/nav.ejs')%>
            <main>

                <% if(blogs.length>0){%>
                    <% blogs.forEach(blog =>{%>
                        <a href="/blogs/<%= blog._id %>">
                            <h3>

                                <%= blog.title %>
                            </h3>

                            <h5>
                                <%= blog.body %>
                            </h5>
                        </a>
                        <%})%>

                            <% }else{%>

                                <h1>no blogs to Display</h1>
                                <% }%>
            </main>
    </body>

</html>